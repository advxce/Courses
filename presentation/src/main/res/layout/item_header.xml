<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="151dp"
    android:id="@+id/parentCard"
    android:background="@drawable/card_top_bg"
    >

    <ImageView
        android:id="@+id/courseImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/java_course_crop"
        android:clipToOutline="true"
        android:background="@drawable/card_image_shape" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">



        <androidx.cardview.widget.CardView
            android:id="@+id/bookmarkCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:cardBackgroundColor="#32333A4D"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            >
            <eightbitlab.com.blurview.BlurView
                android:id="@+id/blurViewBookmark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToOutline="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="6dp">
                <ImageView
                    android:id="@+id/bookmark"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bookmark" />
            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/bottomPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/ratingCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#32333A4D"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">


                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blurViewRating"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="6dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star_fill" />

                    <Space
                        android:layout_width="4dp"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/ratingTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9"
                        android:textColor="@color/app_textview_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="6dp"
                android:layout_height="1dp" />


            <androidx.cardview.widget.CardView
                android:id="@+id/dateCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#32333A4D"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">


                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blurViewContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/dateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="4dp"
                        android:text="22 Мая 2024"
                        android:textColor="@color/app_textview_color"
                        android:textSize="14sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </FrameLayout>


</FrameLayout>